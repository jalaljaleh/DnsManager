<Window x:Class="DnsManager.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnsManager.Windows"
        mc:Ignorable="d"
        Title="Dns Manager" BorderThickness="6" BorderBrush="WhiteSmoke" Height="718" Width="380" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="/Assets/dnsManager.ico" WindowStyle="SingleBorderWindow">
    <Border x:Name="borderMain" Margin="10,10,10,10" BorderThickness="2,2,2,2" CornerRadius="2,2,2,2">
        <Grid x:Name="GridMain">
            <Border x:Name="borderStatus" Margin="1,202,-1,0" Height="40" VerticalAlignment="Top" MaxHeight="40" MinHeight="40" Background="#FFFFEEB3" CornerRadius="5,5,5,5" BorderThickness="2,2,2,2" ClipToBounds="True" >
                <Label x:Name="LabelStatus" Content="Status: 🔓 Not Connected" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16" ScrollViewer.VerticalScrollBarVisibility="Disabled" Background="{x:Null}" Foreground="#FFBB5600" FontWeight="Bold"/>
            </Border>
            <TextBlock TextWrapping="Wrap" Text="DNS Manager" Width="208" FontWeight="Bold" FontSize="22" HorizontalAlignment="Center" Margin="0,161,0,0" VerticalAlignment="Top" TextAlignment="Center" Height="36"/>
            <TextBlock x:Name="LabelVersion" Text="[version]" FontSize="12" TextAlignment="Center" VerticalAlignment="Top" Height="31" Margin="0,627,0,0" Cursor="Hand" FontFamily="Segoe UI Emoji"/>
            <Image x:Name="ImageHeader"  Height="148" Width="168" Source="/Assets/dnsManager.png" VerticalAlignment="Top" Margin="90,10,90,0" Cursor="Hand"/>
            <Grid Height="313" Margin="19,261,19,0" VerticalAlignment="Top">
                <Border x:Name="BorderStatus" Height="262" VerticalAlignment="Top" Margin="0,33,0,0" BorderThickness="2,0,2,2" CornerRadius="2,2,2,2" Padding="5,5,5,5" Background="#FFF3FCFF">
                    <Border.BorderBrush>
                        <SolidColorBrush Color="#FFACACAC" Opacity="0.8"/>
                    </Border.BorderBrush>
                    <TextBlock x:Name="LabelDescription" TextWrapping="WrapWithOverflow" Text="- -" FontWeight="Bold" FontSize="14" Foreground="Black" TextAlignment="Justify"/>
                </Border>
                <Grid VerticalAlignment="Top" Width="NaN" Height="34">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="89"/>
                    </Grid.ColumnDefinitions>
                    <WrapPanel Orientation="Vertical" MaxWidth="330" Grid.Column="1" Background="#FFEFEFEF">
                        <Button x:Name="BtnAdd" Content="+" Height="34" Width="28" Background="{x:Null}" BorderBrush="#FFACACAC" BorderThickness="0,2,0,0" Foreground="Black" FontSize="20" FontStyle="Italic" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Center"/>
                        <Button x:Name="BtnEdit" Content="🖋️" Height="34" Width="32" BorderBrush="#FFACACAC" BorderThickness="0,2,0,0" Foreground="Black" FontSize="18" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Padding="0,1,1,1" Background="{x:Null}"/>
                        <Button x:Name="BtnRemove" Content="🗑️" Height="34" Width="29" BorderBrush="#FFACACAC" BorderThickness="0,2,2,0" Foreground="Black" FontWeight="Light" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="{x:Null}"/>
                    </WrapPanel>
                    <ComboBox x:Name="ComboBoxItems" BorderBrush="{x:Null}" IsReadOnly="True" SelectedIndex="0" DisplayMemberPath="Name" Text="Select an Item" BorderThickness="2,2,2,2" Background="{x:Null}" Padding="10,10,5,3"/>
                </Grid>
            </Grid>
            <Button x:Name="BtnConnect" Content="Connect" Height="37" Margin="27,579,25,0" VerticalAlignment="Top" Background="#FF71D8FD" BorderBrush="#FF60C3F7" BorderThickness="2,2,2,2" FontWeight="Bold" Foreground="black"/>

        </Grid>

    </Border>
</Window>
